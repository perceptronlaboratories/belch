generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Season {
  FALL
  SPRING
  WINTER
  SUMMER
}

model Course { 
  id String @id @default(cuid())
  name String 
  year Int @default(2024)
  season Season @default(FALL)
}
