generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  phone     String   @unique
  firstName String?
  lastName  String?
  courses   Course[]
  files     File[]
}

model Course {
  id     Int    @id @default(autoincrement())
  name   String
  season String @default("fall")
  year   Int    @default(2024)
  user   User   @relation(fields: [userId], references: [id])
  userId String
  tasks  Task[]
  files  File[]
}

enum TaskType {
  HOMEWORK
  EXAM
  STUDY
}

model Task {
  id       Int    @id @default(autoincrement())
  name     String
  course   Course @relation(fields: [courseId], references: [id])
  courseId Int
  files    File[]
}

model File {
  url      String  @id @unique @default("")
  user     User?   @relation(fields: [userId], references: [id])
  userId   String?
  course   Course? @relation(fields: [courseId], references: [id])
  courseId Int?
  task     Task?   @relation(fields: [taskId], references: [id])
  taskId   Int?
}
